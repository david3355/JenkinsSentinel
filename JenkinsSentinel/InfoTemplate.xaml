<Window x:Class="JenkinsSentinel.InfoTemplate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Info" Height="80" Width="300" WindowStyle="None" Background="Transparent"  AllowsTransparency="True" ShowInTaskbar="False" ResizeMode="NoResize" Topmost="True">
    <DockPanel LastChildFill="True">
        <Border Name="border_infoheader" DockPanel.Dock="Top" Height="30"  CornerRadius="7,7,0,0" MouseLeftButtonDown="border_infoheader_MouseLeftButtonDown">
            <Border.Background>
                <SolidColorBrush Color="#FF9DB4EB" />
            </Border.Background>
            <DockPanel>
                <Label FontWeight="Black" Content="Info" />
                <Image Name="img_close" Source="img/delete.png" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="4" MouseDown="img_close_MouseDown" ToolTip="Close window"  />
            </DockPanel>
        </Border>
        <Border CornerRadius="0,0,7,7">
            <Border.Background>
                <SolidColorBrush Color="#FFCBDBFF" />
            </Border.Background>
            <TextBox Name="tx_info" Background="Transparent" IsReadOnly="True" IsUndoEnabled="False" MaxLength="5" BorderBrush="Transparent" AllowDrop="False" BorderThickness="0" />
        </Border>
    </DockPanel>
</Window>
