<Window x:Class="JenkinsSentinel.JobTemplateEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Job Template" Height="400" Width="400" Icon="img/sentineljenkins.png"  >
    <ScrollViewer Background="#2C136DBA">
        <StackPanel>
            <TextBox Name="txt_new_job_name" Margin="10" HorizontalContentAlignment="Center">[New job name]</TextBox>
            <Button Name="btn_start_job" Margin="10" Click="btn_start_job_Click">Start Job</Button>
            <Label Content="Main parameters" Margin="5, 10, 10, 0" FontWeight="Bold"  FontSize="15"/>
            <StackPanel Name="panel_main_parameters">
            </StackPanel>
            <Expander>
                <Expander.Header>
                    <Label FontWeight="Bold"  FontSize="15" Margin="5" >Advanced parameters</Label>
                </Expander.Header>
                <StackPanel Name="panel_advanced_parameters"></StackPanel>
            </Expander>
        </StackPanel>

    </ScrollViewer>
</Window>
